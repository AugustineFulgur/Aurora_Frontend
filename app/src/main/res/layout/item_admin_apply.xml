<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/trend_link"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dip"
    android:orientation="vertical"
    style="@style/aurora_daynight_theme">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/user_nick"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:src="@mipmap/history"
            app:riv_oval="true" /> <!--riv_oval是否圆形-->

        <TextView
            android:id="@+id/user_name"
            style="@style/aurora_daynight_theme"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="10dip"
            android:layout_gravity="center"
            android:text="小黄鸭"
            android:textSize="20sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dip"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/agree"
                    android:layout_width="50dip"
                    android:layout_height="30dip"
                    android:layout_gravity="center"
                    android:layout_centerVertical="true"
                    android:background="@drawable/round_rect"
                    android:backgroundTint="@color/aurora_theme"
                    android:gravity="center"
                    android:text="@string/agree"
                    android:textColor="@color/aurora_font"
                    android:textSize="@dimen/normal_font"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/refuse"
                    android:layout_width="50dip"
                    android:layout_height="30dip"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dip"
                    android:layout_centerVertical="true"
                    android:background="@drawable/round_rect"
                    android:backgroundTint="@color/aurora_theme"
                    android:gravity="center"
                    android:text="@string/refuse"
                    android:textColor="@color/aurora_font"
                    android:textSize="@dimen/normal_font"
                    android:textStyle="bold" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/content"
        style="@style/aurora_daynight_theme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="15dp"
        android:text="1234567894615649746513"
        android:textSize="17sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="@color/aurora_grey"/>

</LinearLayout>
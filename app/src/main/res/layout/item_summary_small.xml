<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/summary_link"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/aurora_daynight_theme">

    <ImageView
        android:id="@+id/summary_pic"
        android:layout_margin="10dip"
        android:layout_width="50dip"
        android:layout_height="50dip" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="5dip"
        android:orientation="vertical">

        <TextView
            android:id="@+id/summary_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="小黄鸭的收藏夹"/>

        <TextView
            android:id="@+id/summary_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/normal_font"
            android:ellipsize="end"
            android:maxLines="1"
                android:inputType="text"
            android:text="小黄鸭喜欢收藏这些帖子，because of 它们非常搞笑。"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dip"
        android:background="@color/aurora_grey"/>

</LinearLayout>
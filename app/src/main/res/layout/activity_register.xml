<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activity.RegisterActivity">
       <androidx.legacy.widget.Space
            android:layout_width="match_parent"
            android:layout_height="100dip"/>

        <TextView
            android:layout_marginTop="20dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textStyle="bold"
            android:text="@string/app_name"
            android:layout_gravity="center"/>

       <androidx.legacy.widget.Space
            android:layout_width="match_parent"
            android:layout_height="20dip"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dip"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <ImageView
                android:layout_width="40dip"
                android:layout_height="40dip"
                android:src="@drawable/ic_baseline_person_24"/>
            <EditText
                android:id="@+id/register_name"
                android:maxLines="1"
                android:inputType="text"
                android:layout_width="250dip"
                android:layout_height="50dip"
                android:textSize="12sp"
                android:drawableBottom="@drawable/line"
                android:drawableTint="@color/aurora_grey"
                android:cursorVisible="true"
                android:hint="@string/content_register_username_hint"/>

        </LinearLayout> <!--账户-->

       <androidx.legacy.widget.Space
            android:layout_width="match_parent"
            android:layout_height="10dip"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dip"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <ImageView
                android:layout_width="40dip"
                android:layout_height="40dip"
                android:src="@drawable/ic_baseline_emoji_emotions_24"
                app:tint="@color/aurora_grey"/>
            <EditText
                android:id="@+id/register_nickname"
                android:maxLines="1"
                android:inputType="text"
                android:drawableTint="@color/aurora_grey"
                android:layout_width="250dip"
                android:layout_height="50dip"
                android:textSize="12sp"
                android:drawableBottom="@drawable/line"
                android:cursorVisible="true"
                android:hint="@string/content_register_nickname_hint"/>

        </LinearLayout> <!--账户-->

       <androidx.legacy.widget.Space
            android:layout_width="match_parent"
            android:layout_height="10dip"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dip"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <ImageView
                android:layout_width="40dip"
                android:layout_height="40dip"
                android:layout_marginVertical="0dp"
                android:src="@drawable/ic_baseline_lock_24"/>
            <EditText
                android:id="@+id/register_password"
                android:drawableTint="@color/aurora_grey"
                android:layout_width="250dip"
                android:layout_height="50dip"
                android:text=""
                android:drawableBottom="@drawable/line"
                android:cursorVisible="true"
                android:textSize="12dip"
                android:hint="@string/content_register_password_hint"/>

        </LinearLayout>

       <androidx.legacy.widget.Space
            android:layout_width="match_parent"
            android:layout_height="10dip"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dip"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <ImageView
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_marginVertical="0dp"
            android:src="@drawable/ic_baseline_lock_24"/>
        <EditText
            android:id="@+id/register_repeat_password"
            android:drawableTint="@color/aurora_grey"
            android:layout_width="250dip"
            android:layout_height="50dip"
            android:text=""
            android:drawableBottom="@drawable/line"
            android:cursorVisible="true"
            android:textSize="12dip"
            android:hint="@string/content_register_repeat_password_hint"/>

    </LinearLayout>

    <androidx.legacy.widget.Space
        android:layout_width="match_parent"
        android:layout_height="10dip"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dip"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <ImageView
                android:layout_width="40dip"
                android:layout_height="40dip"
                android:layout_marginVertical="0dp"
                android:src="@drawable/ic_baseline_local_play_24"
                app:tint="@color/aurora_grey" />
            <EditText
                android:id="@+id/register_invitation"
                android:drawableTint="@color/aurora_grey"
                android:layout_width="250dip"
                android:layout_height="50dip"
                android:text=""
                android:drawableBottom="@drawable/line"
                android:cursorVisible="true"
                android:textSize="12sp"
                android:hint="@string/content_register_invitation_hint"/>
        </LinearLayout>

        <CheckBox
            android:id="@+id/agreement"
            android:text="@string/register_agreement"
            android:layout_gravity="center"
            android:textSize="12sp"
            android:textColor="@color/aurora_grey"
            android:layout_margin="5dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/register"
            android:textSize="@dimen/normal_font"
            android:layout_gravity="center"
            android:layout_width="200dip"
            android:layout_height="40dip"
            android:background="@drawable/round_shape"
            android:text="@string/register" />

       <androidx.legacy.widget.Space
            android:layout_width="match_parent"
            android:layout_height="50dip"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dip"
            android:layout_marginRight="50dip"
            android:text="@string/register_rule"/>
    </LinearLayout>
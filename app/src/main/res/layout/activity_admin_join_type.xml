<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="@style/aurora_daynight_background">

    <LinearLayout
        style="@style/aurora_daynight_theme"
        android:elevation="6dip"
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:orientation="horizontal">

        <TextView
            android:layout_marginLeft="10dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/aurora_font"
            android:textSize="20sp"
            android:text="@string/manage_join_type"/>

        <TextView
            android:layout_marginLeft="10dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/aurora_font"
            android:textSize="@dimen/normal_font"
            android:text="@string/manage"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="@color/aurora_grey"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dip" />

        <me.shihao.library.XRadioGroup
            android:id="@+id/join_type"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/no_condition"
                style="@style/aurora_daynight_theme"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:button="@drawable/selector_aurora_radio_btn"
                android:textSize="17sp"
                android:paddingLeft="20dip"
                android:text="@string/condition_no_condition"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/aurora_background"/>

            <RadioButton
                android:id="@+id/apply"
                style="@style/aurora_daynight_theme"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:button="@drawable/selector_aurora_radio_btn"
                android:textSize="17sp"
                android:paddingLeft="20dip"
                android:text="@string/condition_apply"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/aurora_background"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:orientation="horizontal"
                style="@style/aurora_daynight_theme">

                <RadioButton
                    android:id="@+id/followed"
                    style="@style/aurora_daynight_theme"
                    android:layout_width="wrap_content"
                    android:layout_height="50dip"
                    android:button="@drawable/selector_aurora_radio_btn"
                    android:textSize="17sp"
                    android:paddingLeft="20dip"
                    android:text="@string/condition_followed"/>

                <EditText
                    android:id="@+id/followed_content"
                    android:layout_width="60dip"
                    android:layout_marginLeft="10dip"
                    style="@style/aurora_daynight_theme"
                    android:textSize="17sp"
                    android:layout_height="wrap_content"
                    android:digits="0123456789"
                    android:background="@color/aurora_background"
                    android:drawableBottom="@drawable/line"
                    android:drawableTint="@color/aurora_font"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/aurora_background"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dip"
                android:orientation="horizontal"
                style="@style/aurora_daynight_theme">

                <RadioButton
                    android:id="@+id/answer"
                    style="@style/aurora_daynight_theme"
                    android:layout_width="wrap_content"
                    android:layout_height="50dip"
                    android:button="@drawable/selector_aurora_radio_btn"
                    android:textSize="17sp"
                    android:paddingLeft="20dip"
                    android:text="@string/condition_answer"/>

                <EditText
                    android:id="@+id/answer_content"
                    style="@style/aurora_daynight_theme"
                    android:layout_width="150dip"
                    android:layout_marginLeft="10dip"
                    android:textSize="17sp"
                    android:layout_height="wrap_content"
                    android:digits="0123456789"
                    android:background="@color/aurora_background"
                    android:drawableBottom="@drawable/line"
                    android:drawableTint="@color/aurora_font"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/aurora_background"/>

        </me.shihao.library.XRadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dip" />

        <TextView
            android:id="@+id/submit"
            style="@style/aurora_daynight_theme"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:paddingLeft="15dip"
            android:paddingRight="5dip"
            android:gravity="center"
            android:text="@string/submit"
            android:textSize="17sp" />

    </LinearLayout>

</LinearLayout>